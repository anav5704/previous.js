{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "declaration": false,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2015",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "DOM.Iterable",
            "ESNext",
            "DOM",
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "paths": {
            "@previous.js/shared-ui": [
                "libs/shared/ui/src/index.ts"
            ],
            "@previous.js/shared-ui/server": [
                "libs/shared/ui/src/server.ts"
            ],
        }
    },
    "exclude": [
        "node_modules"
    ]
}